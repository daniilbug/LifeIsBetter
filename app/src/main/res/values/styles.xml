<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBeige</item>
        <item name="colorPrimaryVariant">@color/colorOrangeDark</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/colorGrey</item>
    </style>

    <style name="StartTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/ic_launcher_background</item>
    </style>
</resources>