<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list >
            <item android:width="56dp" android:height="56dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="?colorSurface"/>
                </shape>
            </item>
            <item
                android:gravity="center"
                android:drawable="@drawable/ic_bad"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list >
            <item android:width="52dp" android:height="52dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="?colorSecondary"/>
                </shape>
            </item>
            <item
                android:gravity="center"
                android:drawable="@drawable/ic_bad"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>
</selector>